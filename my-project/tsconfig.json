{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ES6"
    ],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noEmit": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "./*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./src",
    "./tests"
  ],
  "ts-node": {
    "files": true
  }
}
